pipeline {
    agent any
    environment {
        path_to_file = "Neptun"
        file_name = "SSHMIDT"
        remote_dir_path = "Neptun"
        remote_dir_path = "SSHMIDT"

    }
    stages {
        stage('git') {
            steps {
                git branch: 'main', credentialsId: 'GitHub_SSH_key', url: 'git@github.com:Salvadory/WebSite.git'
                sh 'pwd'
                sh 'ls -la'
            }
        }
        
        stage('SSH transfer') {
         script {
          sshPublisher(
           continueOnError: false, failOnError: true,
           publishers: [
            sshPublisherDesc(
             configName: "${env.SSH_CONFIG_NAME}",
             verbose: true,
             transfers: [
              sshTransfer(
              sourceFiles: "${path_to_file}/${file_name}, ${path_to_file}/${file_name}",
              removePrefix: "${path_to_file}",
              remoteDirectory: "${remote_dir_path}",
              execCommand: "run commands after copy?"
             )
            ])
          ])
         }
        }
        
        
        
        
        
        stage('Build') {
            steps {
                echo 'Building'
                
            }
        }

        stage('Test') {
            steps {
                echo 'Testing'
            }
        }
    

        stage('Deploy') {
            steps {
                echo 'Deploying'
            }
        }
    }
}
